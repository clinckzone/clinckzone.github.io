body
  margin: auto;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
  font-size: 16px;
  color: #696969;

h1, h2, h3
  font-family: inter, Helvetica, "Apple Color Emoji", Arial, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol";

.line
  width: 32px;
  height: 5px;
  margin-bottom: 54px;
  background: #a4a4a4; //#5183F5;
  border: none;

h1 
  margin-top: 54px;
  margin-bottom: 16px;
  text-align: center;
  font-size: 40px;
  color:#262626;

h2
  margin: 36px 0 0 0;
  font-size: 30px;
  color:#424242;

h3
  margin: 24px 0 14px 0;
  font-size: 24px;
  color:#424242;

h4
  margin-bottom: 12px; 
  font-size: 18px;
  color:#424242;

p, span, li
  margin: 14px 0px;
  a
    color: #5183F5;
    text-decoration: none;
    padding: 1px 2px;
    font-weight: 500; 
  a:hover
    color: white;
    background: #5183F5;
    border-radius: 2px;

.header
  z-index: 1;
  min-height: 84px;  
  width: 100vw;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: white;
  box-shadow: 11px 20px 31px -9px rgba(0,0,0,0.03);
  position: sticky;
  top: 0;
  .header-container
    width: 1024px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: stretch;
    .logo
      width: 60px;
      height: 60px;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      font-size: 36px;
      a
        text-decoration: none;
      a:hover
        transform: scale(1.2);
        transition: all 0.1s;
    .page-list
      display: flex;
      flex-direction: row;
      align-items: center;
      list-style: none;
      height: 24px;
      li
        margin: 0 16px;
        :hover
          background: #5183F5;
          color: white;
        a
          display: flex;
          flex-direction: row;
          align-items: center;
          height: 36px;
          padding: 0 10px;
          border-radius: 2px;
          font-size: 16px;
          font-weight: 600;
          color: #727272;   
          text-decoration: none;
          letter-spacing: 0.5px;
          transition: all 0.2s;

.footer
  width: 100vw;
  height: 84px;
  background: #424242;
  .links
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 100%;
    .fa
      margin: 0 8px;
      text-decoration: none;
      transform: scale(1.1);
      color: white;
      opacity: 50%;

@media screen and (max-width: 480px)
  h1
    font-size: 36px;
  h2
    font-size: 28px;
  h3
    font-size: 22px;

  .header
    .header-container
      width: 100%;
      .logo
        font-size: 30px;
      .page-list
        li
          margin: 0 6px;
          a
            
            font-weight: 600;
            font-size: 14px;

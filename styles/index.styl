@import "default"
@import "project-list"

.description-box
  height: 85vh;
  width: 1024px;   
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  .info-card
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-right: 36px;
    background: radial-gradient(circle at 20% 20%,#5183f5 25%,#4640ff 100%);
    box-shadow: 0.5rem 1.25rem 1.75rem 0 rgba(100, 110, 140, 0.34);
    border-radius: 6px;
    width: 30%;
    height: 75%;
    img
      width: 75%;
      border: 5px solid white;
      border-radius: 200px;

  .description
    width: 45%;
    margin-left: 36px;
    h1
      text-align: left;
      font-size: 72px;
      margin-bottom: 14px; 
    h3 
      margin-top: 0;
      font-weight: 400;
      color: #c3c3c3;

  .resume 
    display: flex;
    align-items: center;
    justify-content: center;
    width: 125px;
    height: 50px;
    margin-top: 36px;
    font-size: 17px;
    text-decoration: none;
    border: none;
    border-radius: 3px;
    cursor: pointer;
  .resume:hover
    box-shadow: 0rem 0.5rem 1rem 0px rgba(100,110,140,0.34);
    transform: scale(1.05);
    transition: all 0.1s;
  
  .white
    color: #5183f5;
    background: white;
    box-shadow: 0rem 1rem 1rem 0px rgba(100,110,140,0.34);

  .blue
    visibility: hidden;
    color: white;
    background: #5183F5;
    box-shadow: 0rem 0.5rem 1rem 0px rgba(100,110,140,0.2);

.featured-projects
  width: 1024px;

@media screen and (max-width: 1040px)
  .description-box
    width: 100vw;
    .info-card
      display: none;
    .description
      margin-left: 0px;
      h1
        font-size: 64px;
      h3
        font-size: 22px;
    .blue
      visibility: visible;

@media screen and (max-width: 480px)
  .description-box
    height: 75vh; 
    .description
      width: 80%;
      h1
        font-size: 48px;
      h3
        font-size: 20px;
  
  .featured-projects
    width: 100vw;